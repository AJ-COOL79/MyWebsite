<Window x:Class="A.ViewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A"
        mc:Ignorable="d"
        Title="View User" Height="450" Width="800">
    <Window.Resources>

    </Window.Resources>

    <Grid>
        <DataGrid Name="DG1" ItemsSource="{Binding}" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"  Binding="{Binding UserID}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding UserName}" />
                <DataGridHyperlinkColumn Header="Password" Binding="{Binding UPassword}"   />
                <DataGridCheckBoxColumn Header="Function" Binding="{Binding UFunction}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
