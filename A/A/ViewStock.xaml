<Window x:Class="A.ViewStock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A"
        mc:Ignorable="d"
        Title="View Stock" Height="450" Width="800">
    <Window.Resources>

    </Window.Resources>

    <Grid>
        <DataGrid Name="DG1" ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="0,0,0,60"  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"  Binding="{Binding PartID}"/>
                <DataGridTextColumn Header="Part Name" Binding="{Binding PartName}" />
                <DataGridCheckBoxColumn Header="Stock Size" Binding="{Binding StockSize}" />
                <DataGridCheckBoxColumn Header="Category" Binding="{Binding PartCategory}" />
                <DataGridCheckBoxColumn Header="Group" Binding="{Binding PartGroup}" />
                <DataGridCheckBoxColumn Header="Quantity" Binding="{Binding PartQuantity}" />
                <DataGridCheckBoxColumn Header="Location" Binding="{Binding StockLocation}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="688,376,0,0" VerticalAlignment="Top" Width="75" Click="Exit_Click"/>
        <Button Content="View Stock" HorizontalAlignment="Left" Margin="582,376,0,0" VerticalAlignment="Top" Width="75" Click="View_Click"/>
        <Button Content="Move Part" HorizontalAlignment="Left" Margin="476,376,0,0" VerticalAlignment="Top" Width="75" Click="Move_Click"/>
        <Button Content="Remove Stock" HorizontalAlignment="Left" Margin="257,376,0,0" VerticalAlignment="Top" Width="84" Click="RemoveStock_Click"/>
        <Button Content="Add Stock" HorizontalAlignment="Left" Margin="153,376,0,0" VerticalAlignment="Top" Width="75" Click="AddStock_Click"/>
        <Button Content="Update Stock" HorizontalAlignment="Left" Margin="367,376,0,0" VerticalAlignment="Top" Width="81" Click="Update_Click"/>
    </Grid>
</Window>
